block content
  .main.container
    .row
      .col-md-6.col-md-offset-3

          h1.display-4.m-b-2 EDIT PLAYER

          form(method='POST' action='/players/'+id+'?_method='+method)

            div.form-group
              label(for='name') Name:
              input#name.form-control(type='text', placeholder='username' name='name' value= name)
            div.form-group
              label(for='email') Email:
              input#email.form-control(type='email', placeholder='name@email.com' name='email' value= email)
              input.form-control(type='hidden', name='_method', value='PATCH')
            button.btn.btn-primary(type='submit') Send
